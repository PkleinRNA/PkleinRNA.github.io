---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title" style="margin-bottom: 10px;">{{ page.title }}</h1> <!-- Reduced margin-bottom -->
    <p class="post-description" style="font-size: 18px; margin-top: 5px; margin-bottom: 10px;">{{ page.description }}</p> <!-- Reduced margin-top and margin-bottom -->
  </header>

  <article style="margin-top: 10px;"> <!-- Reduced margin-top -->
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2></h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
